/* pages/huodong/content/centent.wxss */

.header{
  width: auto;
  margin: 35rpx;
  display: flex;
  flex-direction: row;
}

.actimg{
  border-radius: 20rpx 20rpx 0 0;
  width: 328rpx;
  height: 240rpx;
}

.actinfo{
  font-size: 0;
  margin-left: 30rpx;
  width: 328rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
}

.title{
  font-size: 32rpx;
  margin-bottom: 20rpx;
  font-weight: 540;
  height: 100rpx;
}

.thetime{
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.contin{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.timectl{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
  width: 100rpx;
  border: 0rpx solid #f6f6f6;  
  margin-right: 100rpx;
  position: relative;
  border-radius: 30rpx;
}
.timetext{
  letter-spacing: 2rpx;
  font-size: 22rpx;
  font-weight: bolder;
  color: white;
  margin: auto;
}
.signup{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 45rpx;
  width: 150rpx;
  border: 1px solid #bbbbbb;
}
.signtext{
  letter-spacing: 2rpx;
  font-size: 25rpx;
  font-weight: bolder;
  color: white;
  margin: auto;
}

.line{
  height: 2rpx;
  width: 94%;
  border-bottom: 2rpx solid #BBBBBB;
  margin-left: 3%; 
}

.details{
  margin: 35rpx;
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
}

.detpart{
  display: flex;
  flex-direction: column;
}
.dettitle{
  font-size: 26rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}
.dettext{
  font-size: 26rpx;
  letter-spacing: 1.5rpx;
  width: 100%;
}

.introsrol{
  height: 300rpx;
  font-size: 0;
  margin-bottom: 40rpx;
}
.tipsrol{
  height: 260rpx;
  font-size: 0;
}
.addrsrol{
  height: 80rpx;
  font-size: 0;
}