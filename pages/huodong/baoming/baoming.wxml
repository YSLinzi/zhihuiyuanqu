<!--pages/huodong/baoming/baoming.wxml-->
<mp-toptips msg="{{errormsg}}" type="error" show="{{error=='true'}}"></mp-toptips>
<view class="container">
  <view class="header">
    <image class="actimg" src="{{actImgurl}}"></image>
    <view class="actinfo">
      <text class="title">{{acttitle}}</text>
      <text class="thetime">开始时间：{{starttime}}</text>
      <text class="thetime">结束时间：{{endtime}}</text>
    </view>
  </view>

  <view class="detail" wx:if="{{actclass=='inner'}}">
    <view class="hang">
      <text class="hangtitle">预约者姓名：</text>
      <input bindinput="changename" class="inp" placeholder="请填入真实姓名" placeholder-class="holder" wx:if="{{baoming=='false'}}" />
        <text style="color:#a3a3a3;margin-top: 18rpx;  position: absolute;  left: 335rpx;" wx:else>{{myname}}</text>
    </view>
    <view class="hang">
      <text class="hangtitle">预约时间：</text>
      <picker mode="date" value="{{date}}" start="{{today}}" end="{{endtime}}" bindchange="bindDateChange" wx:if="{{baoming=='false'}}">
        <view class="picker">
          {{date}}
        </view>
      </picker>
      <text style="color:#a3a3a3;margin-top: 18rpx;  position: absolute;  left: 335rpx;" wx:else>{{date}}</text>
    </view>
    <view class="hang">
      <text class="hangtitle">联系电话：</text>
      <input bindinput="changephonenumber" class="inp" placeholder="请填入电话" placeholder-class="holder" type="number"
        maxlength="11" wx:if="{{baoming=='false'}}" />
        <text style="color:#a3a3a3;margin-top: 18rpx;  position: absolute;  left: 335rpx;" wx:else>{{myphone}}</text>
    </view>
    <button bindtap="sendform" class="okbtn" type="primary" wx:if="{{baoming=='false'}}">确认报名</button>
    <button class="okbtn" type="primary" style="background-color:#ff9a3c;color:#ffffff" disabled="true" wx:else>报名成功</button>
  </view>

  <view class="outerdetail" wx:if="{{actclass=='outer'}}">
    <text class="atext" bindtap='atap'>点击本链接跳转至报名页面</text>
  </view>


</view>