.bottomarea{
  display: flex;
  position: relative;
}

.send{
  display: inline-block;
  padding: 8px 8px;
  width: 24px;
  height: 24px;
  cursor: pointer;
  font-size: 20px;
  position: absolute;
  margin-top: 2px;
}