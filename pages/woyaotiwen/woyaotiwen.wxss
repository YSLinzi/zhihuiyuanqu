.master{
  display: flex;
  flex-direction: column;
}
.describe{
  margin-left: 20rpx;
  font-size: 35rpx;
  border-bottom: 1rpx solid rgb(198, 198, 198);
  line-height: 50rpx;
}
.locate_get{
  display: flex;
  margin-top: 30rpx;
  border-bottom: 1rpx solid rgb(198, 198, 198);
}
.locate_get .currentLocate{
  flex:2;
  margin-left: 30rpx;
  font-size: 35rpx;
}
.locate_get .locate{
  flex:1;
  width: 50rpx;
  height: 45rpx;
}
.locate_get .getLocate{
  flex:4;
  font-size: 30rpx;
}
.wenti{
  font-size: 35rpx;
  display: flex;
  margin-top: 30rpx;
  border-bottom: 1rpx solid rgb(198, 198, 198);
}
.wenti .wenti_title{
  flex:2;
  margin-left: 20rpx;
}
.wenti .wenti_descr{
  flex:5;
}
.wenti .wenti_descr textarea{
  width: 90%;
  height:400rpx;
  border:1rpx solid rgb(198, 198, 198);
  margin-bottom: 20rpx;
}
.tupian{
  font-size: 35rpx;
  display: flex;
  margin-top: 30rpx;
  border-bottom: 1rpx solid rgb(198, 198, 198);
}
.tupian .tupian_title{
  flex:2;
  margin-left: 20rpx;
}
.tupian .img-wrap {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  flex:5;
  font-size: 30rpx;
  color: #33373E;
  margin-bottom: 10rpx;
}

.tupian .img-wrap .txt {
  margin-bottom: 20rpx;
}
.tupian .img-wrap .imglist {
  display: flex;
  flex-wrap: wrap;
}
.tupian .img-wrap .imglist .item {
  width: 150rpx;
  height: 150rpx;
  margin-right: 22rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.tupian .img-wrap .imglist .last-item {
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 146rpx;
  border: 2rpx dashed #8B97A9;
  box-sizing: border-box;
}
.tupian .img-wrap .imglist .item image {
  width: 100%;
  height: 100%;
}
.tupian .img-wrap .imglist .item .delete {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -14rpx;
  right: -12rpx;
}