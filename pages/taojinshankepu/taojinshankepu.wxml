<view class="swiper-tab"> 
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">人文历史</view> 
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">动植物</view> 
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">科教活动</view> 
</view> 
 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange"> 
  <!-- 历史故事 --> 
  <swiper-item> 
   <view class="lishi_list">
    <image src="../assets/taojinshan-img/lishi_card1.png"></image>
    <image src="../assets/taojinshan-img/list_card2.png"></image>
   </view> 
  </swiper-item> 
