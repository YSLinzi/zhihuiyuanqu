  height: 90rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hotnotes{
  width:150rpx;
  height: 90rpx;
  margin-left: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.hottext{
  color: #979797;
  font-size: 32rpx;  
}
.select{
  height: 35rpx;
