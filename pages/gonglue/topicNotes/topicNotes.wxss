  position: relative;
  left: 10rpx;
  margin-bottom:10rpx; 
  display: flex;
}

.title{
  font-size: 32rpx;
  font-weight: bolder;
  color: #3E3E3E;
  margin: 10rpx;
  margin-top: 13rpx;
}

